<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>3D Gradient Card Gallery</title>
<style>
  body { 
    margin: 0; 
    overflow: hidden; 
    background: #111; 
  }
  canvas { display: block; }
</style>
</head>
<body>

<script src="https://cdn.jsdelivr.net/npm/three@0.158.0/build/three.min.js"></script>
<script>
  // Scene
  const scene = new THREE.Scene();

  // Camera
  const camera = new THREE.PerspectiveCamera(
    75,
    window.innerWidth / window.innerHeight,
    0.1,
    1000
  );
  camera.position.set(0, 0, 7);
  camera.lookAt(0, 0, 0);

  // Renderer
  const renderer = new THREE.WebGLRenderer({ antialias: true });
  renderer.setSize(window.innerWidth, window.innerHeight);
  document.body.appendChild(renderer.domElement);

  // Lighting
  const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
  scene.add(ambientLight);
  const pointLight = new THREE.PointLight(0xffffff, 1);
  pointLight.position.set(5, 5, 5);
  scene.add(pointLight);

  // Create multiple cubes/cards
  const cubes = [];
  const colors = [
    new THREE.Color(0xff00ff),
    new THREE.Color(0x00ffff),
    new THREE.Color(0xffff00)
  ];
  const positions = [-3, 0, 3];

  for (let i = 0; i < 3; i++) {
    const geometry = new THREE.BoxGeometry(1.5, 2, 0.2);
    const material = new THREE.MeshStandardMaterial({ 
      color: colors[i], 
      roughness: 0.4, 
      metalness: 0.7 
    });
    const cube = new THREE.Mesh(geometry, material);
    cube.position.x = positions[i];
    scene.add(cube);
    cubes.push(cube);
  }

  // Hover detection for pop effect
  let hoverIndex = -1;
  window.addEventListener('mousemove', (e) => {
    const x = (e.clientX / window.innerWidth) * 2 - 1;

    if(x < -0.33) hoverIndex = 0;
    else if(x < 0.33) hoverIndex = 1;
    else hoverIndex = 2;
  });

  // Click sparkle effect
  window.addEventListener('click', () => {
    if(hoverIndex !== -1) {
      const cube = cubes[hoverIndex];
      // temporary scale flash
      cube.scale.set(1.5, 1.5, 1.5);
      setTimeout(() => cube.scale.set(1.3,1.3,1.3), 100);
    }
  });

  // Animate loop
  function animate() {
    requestAnimationFrame(animate);

    cubes.forEach((cube, i) => {
      // Rotate slowly
      cube.rotation.y += 0.01 + i*0.002;
      cube.rotation.x += 0.005 + i*0.001;

      // Hover pop effect
      if(i === hoverIndex) {
        cube.scale.set(1.3, 1.3, 1.3);
      } else {
        cube.scale.set(1, 1, 1);
      }
    });

    renderer.render(scene, camera);
  }
  animate();

  // Responsive
  window.addEventListener('resize', () => {
    camera.aspect = window.innerWidth / window.innerHeight;
    camera.updateProjectionMatrix();
    renderer.setSize(window.innerWidth, window.innerHeight);
  });
</script>

</body>
</html>
